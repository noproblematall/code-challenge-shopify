{%- capture options -%}
[
  { label: "Order History", value: "/account" },
  { label: "Addresses", value: "/account/addresses" },
  {%- if customer.metafields.subscriptions.customer_string -%}
    {%- assign subscription_path = '/tools/recurring/customer/' | append: customer.metafields.subscriptions.customer_string | append: '/subscriptions/' -%}
    { label: "Subscriptions", value: "{{ subscription_path }}" },
  {%- endif -%}
  { label: "Log Out", value: "/account/logout" }
]
{%- endcapture -%}

<account-nav :options="{{ options | escape }}" customer-name="{{ customer.first_name }}" customer-email="{{ customer.email }}"></account-nav>