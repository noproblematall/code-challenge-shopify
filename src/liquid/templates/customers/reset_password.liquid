<div class="container">
  {%- form 'reset_customer_password' -%}

    <h1 class="account--content__header">{{ 'customer.reset_password.title' | t }}</h1>

    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {{ form.errors | default_errors }}

    <div class="input input--text {% if form.errors contains 'password' %}error{% endif %}">
      <input type="password"
        name="customer[password]"
        id="ResetPassword">
      <label for="ResetPassword">
        {{ 'customer.reset_password.password' | t }}
      </label>
    </div>

    <div class="input input--text {% if form.errors contains 'password_confirmation' %}error{% endif %}">
      <input type="password"
        name="customer[password_confirmation]"
        id="PasswordConfirmation">
      <label for="PasswordConfirmation">
        {{ 'customer.reset_password.password_confirm' | t }}
      </label>
    </div>

    <input type="submit" class="button button--primary" value="{{ 'customer.reset_password.submit' | t }}">
  {%- endform -%}
</div>
