[
  {
    "name": "theme_info",
    "theme_name": "CodingChallenge",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://stacks.bvaccel.com/books/clients/chapter/CodingChallenge",
    "theme_support_url": "https://stacks.bvaccel.com/books/clients/chapter/CodingChallenge"
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Shown when sharing a link on social media. [Learn more](https://help.shopify.com/manual/using-themes/troubleshooting/showing-social-media-thumbnail-images/) about image thumbnails."
      },
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Social Media Links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  },
  {
    "name": "Sidecart",
    "settings": [
      {
        "type": "header",
        "content": "Promo Bar"
      },
      {
        "type": "text",
        "id": "sidecart_promo_message",
        "label": "Promo Banner Message"
      },
      {
        "type": "header",
        "content": "Empty Cart"
      },
      {
        "type": "text",
        "id": "sidecart_empty_message",
        "label": "Text",
        "default": "Your cart is empty."
      },
      {
        "type": "image_picker",
        "id": "sidecart_empty_image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "sidecart_empty_image_alt",
        "label": "Text",
        "default": "Image Description"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Gift with Purchase",
    "settings": [
      {
        "type": "header",
        "content": "Threshold"
      },
      {
        "type": "product",
        "id": "gwp_threshold_product",
        "label": "Product",
        "info": "Added to cart when threshold is met"
      },
      {
        "type": "text",
        "id": "gwp_threshold_description",
        "label": "Description"
      },
      {
        "type": "range",
        "id": "gwp_threshold_value",
        "min": 5,
        "max": 500,
        "step": 5,
        "label": "Threshold (in dollars)",
        "default": 50
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
]
